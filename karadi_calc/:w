#include <iostream>
using namespace std;

// Displays the selected mode
void disp_mode(int mode) {
    if(mode == 1)
        cout << "Addition mode chosen\n";
    else if(mode == 1)
        cout << "Addition mode chosen\n";
    else
        cout << "Sorry please enter a valid mode\n";
}

// Adder
int add(int a, int b) {
    return a + b;
}

// Fun little way to traverse an array
void print() {
    int v[] = {0,1,2,3,4,5,6};
    
    for(auto x : v)
        cout << x << " ";
    
    for(auto x : {10,20,30,40,50,60})
        cout << x << " ";
}

int main() {

    // Initialiing the numbers to be calculated
    int num1 = 0, num2 = 0;
    int mode = 0;

    // Welcome Message
    cout << "------------------------\nWelcome to Karadi-Calc\n------------------------\n";
    cout << "Select mode:\n[1] Addition\n[2] Subraction\n";
    cin >> mode;

    disp_mode(mode);
    
}
